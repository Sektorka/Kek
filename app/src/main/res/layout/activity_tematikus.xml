<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tematikus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="hu.kek.TematikusActivity">

    <Button
        android:text="Tárgymutató"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_targymutato"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Szentírási források"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_szentirasForras"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/button_targymutato"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/egyhaziForrasokButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_szentirasForras"
        android:layout_marginTop="15dp"
        android:text="Egyházi források"
        android:visibility="visible"/>
</RelativeLayout>
